<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.imozerov.streetartview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".StreetArtViewApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity android:name=".ui.explore.ExploreArtActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.detail.DetailArtObjectActivity">
        </activity>

        <service
            android:name=".network.FetchService"
            android:exported="false">
        </service>

        <activity
            android:name=".ui.detail.ImageViewActivity"
            android:label="@string/title_activity_image_view">
        </activity>
    </application>

</manifest>
